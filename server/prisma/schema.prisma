datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  certifications Certification[]
  createdAt      DateTime        @default(now())
  email          String          @unique
  firstName      String?
  formations     Formation[]
  id             String          @id @default(cuid())
  lastName       String?
  password       String
  phoneNumber    String?         @unique
  roles          Json
  updatedAt      DateTime        @updatedAt
  username       String          @unique
  whiteTests     WhiteTest[]
}

model WhiteTest {
  code       String                 @unique
  createdAt  DateTime               @default(now())
  domain     String?
  duration   Int?
  id         String                 @id @default(cuid())
  language   EnumWhiteTestLanguage?
  name       String
  technology String?
  updatedAt  DateTime               @updatedAt
  user       User?                  @relation(fields: [userId], references: [id])
  userId     String?
}

model Certification {
  code       String?
  createdAt  DateTime                   @default(now())
  domain     String?
  duration   Int?
  id         String                     @id @default(cuid())
  language   EnumCertificationLanguage?
  technology String?
  updatedAt  DateTime                   @updatedAt
  user       User?                      @relation(fields: [userId], references: [id])
  userId     String?
}

model Formation {
  createdAt DateTime  @default(now())
  endDate   DateTime?
  id        String    @id @default(cuid())
  maxCount  String?
  startDate DateTime?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

enum EnumWhiteTestLanguage {
  fr
  English
  ar
}

enum EnumCertificationLanguage {
  fr
  en
  ar
  Italian
}